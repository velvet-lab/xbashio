# .editorconfig - xbashio project coding style configuration
# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Universal defaults for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# Shell scripts (Bash) - Core library and demo files
[*.{sh,bash}]
indent_style = space
indent_size = 2
shell_variant = bash

# Bats test files - Testing framework
[*.bats]
indent_style = space
indent_size = 2

# Justfiles - Build automation (Just task runner)
[{*.justfile,.justfile,*.just}]
indent_style = space
indent_size = 2

# YAML files - GitHub workflows and CI configurations
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files - Documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# JSON files - Package configuration
[*.json]
indent_style = space
indent_size = 2

# Lock files - Preserve exact formatting
[{package-lock.json,bun.lock,yarn.lock,pnpm-lock.yaml}]
indent_style = space
indent_size = 2
insert_final_newline = false

# JavaScript/TypeScript files (if present for tooling)
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# PowerShell files - Windows plugin support
[*.ps1]
indent_style = space
indent_size = 2
end_of_line = crlf

# Git configuration files
[{.gitignore,.gitattributes}]
indent_style = space
indent_size = 2

# Makefiles (kept for compatibility, though project uses Just)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# YAML files (if present)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Configuration files
[{LICENSE,README,*.txt}]
trim_trailing_whitespace = true
insert_final_newline = true
